%header
  %nav.navbar{class: "bg-rose-700 py-2 px-4 flex gap-4 justify-between
  items-center text-white"}
    .logo
      = link_to (image_tag "logo.svg", size: "120"), root_url
    .interactions{class: "p-2 flex gap-16 items-center"}
      .feedback
        = button_to "Feedback", "#", class: "btn-special"
      .user{class: "object-center"}
        - if @user
          .user_nav{class:"flex gap-4 items-center"}
            .profile
              = button_to "#{@user.name}'s profile", "#", class: "btn-primary"
            = button_to "Log Out", "#", class: "btn-secondary"
        - else
          .guest_nav
            = button_to "Log In", "#", class: "btn-primary" |
